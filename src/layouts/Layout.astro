<style is:global>
	:root {
		--bg: #050505;
		--fg: #ffffff;
		--accent: #FF0033; /* Urgency Red */
		--glow: rgba(255, 0, 51, 0.4);
		--gold: #FFD500;
		--neon-blue: #00F7FF;
		--dark-panel: #111111;
	}
	
	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	html {
		font-family: 'Inter', system-ui, sans-serif;
		background: var(--bg);
		color: var(--fg);
		scroll-behavior: smooth;
	}

	body {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		overflow-x: hidden;
	}

	h1, h2, h3, h4 {
		font-family: 'JetBrains Mono', monospace;
		letter-spacing: -0.05em;
	}

	a {
		color: inherit;
		text-decoration: none;
		transition: 0.2s;
	}

	/* Glassmorphism Nav */
	.glass-nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 1rem 2rem;
		background: rgba(5, 5, 5, 0.8);
		backdrop-filter: blur(12px);
		border-bottom: 1px solid rgba(255, 255, 255, 0.1);
		position: sticky;
		top: 0;
		z-index: 100;
	}

	.logo {
		font-family: 'JetBrains Mono', monospace;
		font-weight: 800;
		font-size: 1.5rem;
		letter-spacing: -0.1em;
	}

	.highlight {
		color: var(--accent);
		text-shadow: 0 0 10px var(--glow);
	}

	.links {
		display: flex;
		gap: 2rem;
		align-items: center;
	}

	.links a:hover {
		color: var(--accent);
	}

	.btn-nav {
		background: rgba(255, 255, 255, 0.1);
		padding: 0.5rem 1rem;
		border-radius: 4px;
		font-size: 0.9rem;
	}

	.btn-nav:hover {
		background: var(--accent);
		color: black;
		box-shadow: 0 0 15px var(--glow);
	}

	.pulse {
		color: var(--gold);
		font-weight: bold;
		animation: pulse 2s infinite;
	}

	@keyframes pulse {
		0% { opacity: 1; }
		50% { opacity: 0.6; }
		100% { opacity: 1; }
	}

	main {
		flex: 1;
		padding: 2rem;
		max-width: 1200px;
		margin: 0 auto;
		width: 100%;
	}

	footer {
		text-align: center;
		padding: 3rem 0;
		border-top: 1px solid #222;
		color: #666;
		font-size: 0.9rem;
	}

	.secure-badge {
		margin-top: 0.5rem;
		color: #444;
		font-family: 'JetBrains Mono', monospace;
		font-size: 0.8rem;
	}

	/* Utilities */
	.text-accent { color: var(--accent); }
	.text-gold { color: var(--gold); }
	.text-neon { color: var(--neon-blue); }
	
	.card {
		background: var(--dark-panel);
		border: 1px solid #222;
		padding: 1.5rem;
		border-radius: 8px;
		transition: 0.3s;
	}

	.card:hover {
		border-color: var(--accent);
		box-shadow: 0 0 20px rgba(255, 0, 51, 0.1);
		transform: translateY(-2px);
	}

	/* Buttons */
	.btn {
		display: inline-block;
		padding: 1rem 2.5rem;
		background: var(--accent);
		color: black;
		font-weight: 800;
		font-family: 'JetBrains Mono', monospace;
		text-transform: uppercase;
		border: none;
		border-radius: 4px;
		cursor: pointer;
		box-shadow: 0 0 20px var(--glow);
		transition: 0.2s;
	}

	.btn:hover {
		transform: scale(1.05);
		box-shadow: 0 0 40px var(--glow);
		background: #ff1a47;
		color: white;
	}

	.btn-secondary {
		background: transparent;
		border: 1px solid #333;
		color: #fff;
		box-shadow: none;
	}

	.btn-secondary:hover {
		border-color: #fff;
		background: #111;
		color: #fff;
		box-shadow: none;
	}

	/* Scanlines Effect */
	.scanlines {
		position: fixed;
		top: 0;
		left: 0;
		width: 100vw;
		height: 100vh;
		background: linear-gradient(
			to bottom,
			rgba(255, 255, 255, 0),
			rgba(255, 255, 255, 0) 50%,
			rgba(0, 0, 0, 0.2) 50%,
			rgba(0, 0, 0, 0.2)
		);
		background-size: 100% 4px;
		pointer-events: none;
		z-index: 9999;
		opacity: 0.15;
	}
</style>

