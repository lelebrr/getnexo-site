---
// src/pages/blog/[slug].astro
import Layout from '../../layouts/Layout.astro';

export function getStaticPaths() {
  return [
    { params: { slug: 'lancamento' } },
    { params: { slug: 'n8n' } },
    { params: { slug: 'wsl' } },
    { params: { slug: 'tunnel' } },
  ];
}

const { slug } = Astro.params;

const posts = {
  lancamento: {
    title: "Lançamento do GetNexo",
    content: "<p>Texto completo do lançamento. Temos chat, n8n, API, tudo rodando em WSL.</p>"
  },
  n8n: {
    title: "Automação com n8n",
    content: "<p>Como criar workflows de WhatsApp pra CRM em 5 minutos.</p>"
  },
  wsl: {
    title: "Segurança no WSL",
    content: "<p>Como proteger o servidor local com túnel e firewall.</p>"
  },
  tunnel: {
    title: "Cloudflare Tunnel",
    content: "<p>Explicação técnica do que a gente fez hoje.</p>"
  }
};

const post = posts[slug];
---

<Layout title={post.title}>
  <h1>{post.title}</h1>
  <Fragment set:html={post.content} />
  <a href="/blog">← Voltar ao blog</a>
</Layout>
