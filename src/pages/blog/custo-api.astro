<script>
  // Interactive Calculator Logic
  function updateCalculator() {
    const messages = parseInt((document.getElementById('messagesPerMonth') as HTMLInputElement).value) || 10000;
    const responseRate = (parseInt((document.getElementById('responseRate') as HTMLInputElement).value) || 15) / 100;
    const conversionRate = (parseInt((document.getElementById('conversionRate') as HTMLInputElement).value) || 25) / 100;
    const averageTicket = parseInt((document.getElementById('averageTicket') as HTMLInputElement).value) || 150;

    // Meta API costs (Brazil 2026)
    const conversationRate = 0.26; // R$ per conversation
    const marketingRate = 0.061; // R$ per marketing message
    const conversations = messages * 0.4; // Assume 40% start conversations
    const additionalMessages = messages * 0.6; // 60% are additional messages

    const metaApiCost = (conversations * conversationRate) + (additionalMessages * marketingRate);
    const metaInfraCost = 350; // Server, etc.
    const metaTotal = metaApiCost + metaInfraCost;

    // GetNexo cost
    const getnexoCost = messages <= 1000 ? 97 : messages <= 5000 ? 197 : 497;

    // Revenue calculation
    const conversationsStarted = conversations;
    const responses = conversationsStarted * responseRate;
    const conversions = responses * conversionRate;
    const additionalRevenue = conversions * averageTicket;

    // Savings
    const monthlySavings = metaTotal - getnexoCost;
    const yearlySavings = monthlySavings * 12;
    const paybackDays = Math.ceil((getnexoCost / additionalRevenue) * 30);
    const additionalROI = ((additionalRevenue - getnexoCost) / getnexoCost * 100);

    // Update display
    document.getElementById('meta-api-cost').textContent = `R$ ${metaApiCost.toFixed(0)}`;
    document.getElementById('meta-total-cost').textContent = `R$ ${metaTotal.toFixed(0)}`;
    document.getElementById('monthly-savings').textContent = `R$ ${monthlySavings.toFixed(0)}`;
    document.getElementById('yearly-savings').textContent = `R$ ${yearlySavings.toFixed(0)}`;
    document.getElementById('payback-days').textContent = `${paybackDays} dias`;
    document.getElementById('additional-roi').textContent = `${additionalROI.toFixed(0)}%`;
  }

  // Initialize calculator
  document.addEventListener('DOMContentLoaded', function() {
    updateCalculator();

    // Add event listeners to inputs
    document.getElementById('messagesPerMonth').addEventListener('input', updateCalculator);
    document.getElementById('responseRate').addEventListener('input', updateCalculator);
    document.getElementById('conversionRate').addEventListener('input', updateCalculator);
    document.getElementById('averageTicket').addEventListener('input', updateCalculator);
  });
</script>
