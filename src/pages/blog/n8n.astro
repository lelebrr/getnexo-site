<style>
  .post { max-width: 900px; margin: 6rem auto 4rem; padding: 0 5%; }
  .post h1 { font-size: 3.5rem; background: linear-gradient(90deg, var(--primary), var(--success)); -webkit-background-clip: text; color: transparent; }
  .post time { font-size: 1rem; color: #64748b; display: block; margin-bottom: 2rem; }
  .post ul { list-style: none; padding: 0; }
  .post li { margin: 1rem 0; font-size: 1.1rem; }
  .post li:before { content: "→"; color: var(--success); margin-right: 0.5rem; }
</style>
