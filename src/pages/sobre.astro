  .cta-box { padding: 6rem 4rem; text-align: center; border-radius: 48px; }
  .cta-box h2 { font-size: 3rem; color: white; font-weight: 900; margin-bottom: 1.5rem; }
  .cta-box p { color: #94a3b8; font-size: 1.2rem; margin-bottom: 3rem; }
  .cta-btns { display: flex; gap: 2rem; justify-content: center; }

