  .section-title { text-align: center; font-size: 3rem; font-weight: 900; margin-bottom: 5rem; color: white; }
  
  .timeline-wrapper { position: relative; }
  .timeline-line { position: absolute; left: 50%; top: 0; bottom: 0; width: 2px; background: linear-gradient(to bottom, transparent, #00d4ff, #00ff9d, transparent); transform: translateX(-50%); }
  
  .timeline-block { display: flex; justify-content: flex-end; width: 100%; margin-bottom: 4rem; position: relative; }
  .timeline-block.reverse { justify-content: flex-start; }
  
  .block-content { width: 45%; padding: 3rem; border-radius: 24px; }
  .block-year { font-size: 2rem; font-weight: 900; color: #00ff9d; display: block; margin-bottom: 0.5rem; }
  .block-content h4 { font-size: 1.4rem; color: white; margin-bottom: 1rem; }
  .block-content p { color: #64748b; line-height: 1.6; }
  
  .block-dot { position: absolute; left: 50%; top: 2rem; width: 20px; height: 20px; background: #00ff9d; border: 4px solid #030712; border-radius: 50%; transform: translateX(-50%); box-shadow: 0 0 20px #00ff9d; }

