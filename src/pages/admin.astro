<style>
  .dashboard-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 1.5rem;
      margin-bottom: 2rem;
  }

  .metric-card {
      background: #111;
      border: 1px solid #222;
      padding: 1.5rem;
      border-radius: 8px;
  }

  .metric-card .label {
      font-size: 0.7rem;
      color: #777;
      letter-spacing: 1px;
      font-weight: bold;
  }

  .metric-card .value {
      font-size: 2.5rem;
      font-weight: 800;
      color: white;
      margin: 0.5rem 0;
      font-family: 'JetBrains Mono', monospace;
  }

  .trend { font-size: 0.8rem; }
  .trend.up { color: #0f0; }
  .trend.down { color: #0f0; } /* Good for latency */
  
  .card {
      background: #111;
      border: 1px solid #222;
      padding: 1.5rem;
      border-radius: 8px;
  }

  .wide { grid-column: span 3; }

  h3 {
      font-size: 1rem;
      margin-bottom: 1.5rem;
      color: #aaa;
      border-bottom: 1px solid #222;
      padding-bottom: 0.5rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
  }

  .status-list {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
  }

  .status-item {
      display: flex;
      align-items: center;
      gap: 0.8rem;
      background: #1a1a1a;
      padding: 0.8rem;
      border-radius: 4px;
      font-size: 0.9rem;
  }

  .status-item.ok .dot {
      width: 8px;
      height: 8px;
      background: #0f0;
      border-radius: 50%;
      box-shadow: 0 0 8px #0f0;
  }

  .url {
      margin-left: auto;
      font-family: 'JetBrains Mono', monospace;
      color: #555;
      font-size: 0.8rem;
  }

  .btn-group {
      display: flex;
      flex-direction: column;
      gap: 0.8rem;
  }

  .action-btn {
      display: block;
      padding: 0.8rem;
      text-align: center;
      background: #222;
      color: white;
      text-decoration: none;
      border-radius: 4px;
      transition: 0.2s;
      font-size: 0.9rem;
  }

  .action-btn:hover { background: #333; }
  
  .action-btn.primary {
      background: var(--accent);
      color: black;
      font-weight: bold;
  }
  
  .action-btn.primary:hover {
      background: #ff3355;
      box-shadow: 0 0 15px rgba(255,0,51,0.4);
  }

  .notifications ul {
      list-style: none;
      margin-top: 1rem;
  }

  .notifications li {
      padding: 0.8rem 0;
      border-bottom: 1px solid #222;
      color: #888;
      font-size: 0.9rem;
      font-family: 'JetBrains Mono', monospace;
  }
</style>
