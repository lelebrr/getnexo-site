<style>
  .hero {
    text-align: center;
    padding: 100px 5% 80px;
    background: linear-gradient(135deg, var(--dark), #0a1128);
    position: relative;
  }
  .hero::before {
    content: '';
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    background: radial-gradient(ellipse at center, rgba(0,212,255,0.15) 0%, transparent 70%);
    pointer-events: none;
  }
  .hero h1 {
    font-size: clamp(2.2rem, 6vw, 3.8rem);
    background: linear-gradient(90deg, var(--primary), var(--success));
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    margin: 0 0 1.5rem;
    line-height: 1.2;
  }
  .hero h1 strong { color: var(--success); -webkit-text-fill-color: var(--success); }
  .subtitle {
    font-size: clamp(1rem, 2.5vw, 1.4rem);
    color: var(--text);
    max-width: 800px;
    margin: 0 auto 2rem;
  }
  .hero-badges {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 2.5rem;
  }
  .hero-badges span {
    background: rgba(0,212,255,0.1);
    border: 1px solid rgba(0,212,255,0.3);
    padding: 0.5rem 1.2rem;
    border-radius: 50px;
    font-size: 0.9rem;
    color: var(--light);
  }
  .buttons { display: flex; gap: 1.5rem; justify-content: center; flex-wrap: wrap; }
  .btn-primary {
    display: inline-block;
    background: linear-gradient(90deg, var(--success), #00cc88);
    color: black;
    padding: 1rem 2.5rem;
    border-radius: 50px;
    font-weight: 800;
    text-decoration: none;
    transition: all 0.3s;
    box-shadow: 0 5px 20px rgba(0,255,157,0.3);
  }
  .btn-primary:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 10px 30px rgba(0,255,157,0.5);
  }
  .btn-secondary {
    display: inline-block;
    color: var(--light);
    border: 2px solid var(--primary);
    padding: 1rem 2rem;
    border-radius: 50px;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s;
  }
  .btn-secondary:hover { background: var(--primary); color: black; }

  .features {
    padding: 80px 5%;
    max-width: 1200px;
    margin: 0 auto;
  }
  .features h2 {
    text-align: center;
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    margin: 0 0 3rem;
    background: linear-gradient(90deg, var(--primary), var(--success));
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
  }
  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }
  .feature-card {
    background: rgba(30,41,59,0.7);
    border: 1px solid rgba(0,212,255,0.15);
    border-radius: 16px;
    padding: 2rem;
    text-align: center;
    transition: all 0.4s;
  }
  .feature-card:hover {
    transform: translateY(-8px);
    border-color: var(--primary);
    box-shadow: 0 15px 30px rgba(0,212,255,0.2);
  }
  .feature-card .icon { font-size: 2.5rem; display: block; margin-bottom: 1rem; }
  .feature-card h3 { color: var(--success); margin: 0 0 0.8rem; font-size: 1.3rem; }
  .feature-card p { color: var(--text); margin: 0; line-height: 1.6; }

  .comparison {
    padding: 80px 5%;
    background: rgba(30,41,59,0.5);
    text-align: center;
  }
  .comparison h2 {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    margin: 0 0 3rem;
    color: var(--light);
  }
  .comparison-bars {
    max-width: 600px;
    margin: 0 auto 2rem;
  }
  .bar {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
    position: relative;
    height: 50px;
    background: rgba(10,14,23,0.8);
    border-radius: 8px;
    overflow: hidden;
  }
  .bar .label {
    position: absolute;
    left: 1rem;
    z-index: 2;
    font-weight: 600;
    color: var(--light);
  }
  .bar .value {
    position: absolute;
    right: 1rem;
    z-index: 2;
    font-weight: 800;
  }
  .bar-fill {
    height: 100%;
    border-radius: 8px;
    position: absolute;
    left: 0;
  }
  .bar.getnexo .bar-fill { background: linear-gradient(90deg, var(--success), #00cc88); }
  .bar.getnexo .value { color: var(--success); }
  .bar.competitor .bar-fill { background: linear-gradient(90deg, #ff4d4d, #ff6b6b); }
