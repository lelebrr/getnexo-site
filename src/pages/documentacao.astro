<style>
  .docs-hero { text-align: center; padding: 8rem 5% 4rem; }
  .hero-badge { background: rgba(0, 212, 255, 0.1); color: #00d4ff; padding: 0.5rem 1.2rem; border-radius: 50px; font-size: 0.85rem; font-weight: 700; border: 1px solid rgba(0, 212, 255, 0.2); display: inline-block; margin-bottom: 2rem; }
  .docs-hero h1 { font-size: 3.5rem; margin-bottom: 1rem; }
  .docs-hero p { color: #94a3b8; font-size: 1.25rem; max-width: 600px; margin: 0 auto; }

  .docs-nav { 
    display: flex; justify-content: center; gap: 1rem; padding: 1rem; 
    position: sticky; top: 90px; z-index: 100; max-width: 800px; margin: 0 auto 4rem;
    border-radius: 16px; flex-wrap: wrap; backdrop-filter: blur(20px);
  }
  .docs-nav a { 
    color: #94a3b8; text-decoration: none; font-size: 0.9rem; font-weight: 700; 
    padding: 0.6rem 1.2rem; border-radius: 10px; transition: 0.2s;
  }
  .docs-nav a:hover { color: #00ff9d; background: rgba(0, 255, 157, 0.05); }

  .docs-content { max-width: 900px; margin: 0 auto; padding: 0 5%; }
  .doc-section { margin-bottom: 6rem; }
  .section-title { color: white; font-size: 2rem; margin-bottom: 2rem; font-weight: 800; }

  .requirements-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 1.5rem; }
  .req-card { padding: 2rem; border-color: rgba(255,255,255,0.03); }
  .req-card h3 { color: #00ff9d; font-size: 1.1rem; margin-bottom: 1.5rem; }
  .req-card ul { list-style: none; padding: 0; }
  .req-card li { color: #94a3b8; font-size: 0.95rem; margin-bottom: 0.8rem; padding-left: 1.5rem; position: relative; }
  .req-card li::before { content: "‚Üí"; position: absolute; left: 0; color: #00d4ff; }

  .code-wrapper { background: #070b14; border-radius: 16px; border: 1px solid rgba(255,255,255,0.05); overflow: hidden; margin: 2rem 0; }
  .code-header { background: rgba(255,255,255,0.02); padding: 0.8rem 1.5rem; border-bottom: 1px solid rgba(255,255,255,0.05); font-family: monospace; font-size: 0.8rem; color: #64748b; }
  .code-wrapper pre { padding: 1.5rem; overflow-x: auto; margin: 0; }
  .code-wrapper code { font-family: 'JetBrains Mono', monospace; font-size: 0.9rem; color: #e2e8f0; line-height: 1.6; }
  .doc-note { background: rgba(0, 212, 255, 0.05); color: #00d4ff; padding: 1rem 1.5rem; border-radius: 12px; font-size: 0.9rem; }

  .steps-flow { display: flex; flex-direction: column; gap: 2rem; }
  .step-item { display: flex; gap: 1.5rem; align-items: flex-start; }
  .step-icon { 
    background: linear-gradient(135deg, #00d4ff, #00ff9d); color: black; 
    width: 2.5rem; height: 2.5rem; border-radius: 50%; display: flex; align-items: center; justify-content: center;
    font-weight: 900; shrink: 0;
  }
  .step-text h4 { color: white; margin-bottom: 0.3rem; }
  .step-text p { color: #94a3b8; font-size: 0.95rem; }

  .trouble-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); gap: 1.5rem; }
  .trouble-item { padding: 1.5rem; border-bottom: 4px solid rgba(255,255,255,0.05); transition: 0.3s; }
  .trouble-item:hover { border-bottom-color: #00ff9d; transform: translateY(-3px); }
  .trouble-item h4 { color: white; margin-bottom: 0.5rem; }
  .trouble-item p { color: #64748b; font-size: 0.9rem; }

  .docs-footer { padding: 4rem 5% 10rem; }
