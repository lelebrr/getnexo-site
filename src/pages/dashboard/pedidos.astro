        .stat-pill { background: rgba(0,0,0,0.3); padding: 0.8rem 1.5rem; border-radius: 12px; border: 1px solid rgba(255,255,255,0.05); display: flex; flex-direction: column; gap: 4px; }
        .stat-pill .label { font-size: 0.6rem; font-weight: 800; color: #64748b; text-transform: uppercase; }
