---
import Layout from '../../layouts/Layout.astro';
import RolesManager from '../../components/RolesManager.jsx';

---

<Layout title="Gerenciar Funções | GetNexo">
  <main class="min-h-screen pt-24 pb-12 relative overflow-hidden">
    <!-- Background Particles/Effects -->
    <div class="absolute inset-0 bg-gradient-to-br from-[#0a0e17] to-[#111827] -z-10"></div>
    <div class="absolute top-0 left-0 w-full h-full bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-20 -z-10"></div>
    
    <div class="container mx-auto px-4">
        <h1 class="text-4xl md:text-5xl font-bold text-center mb-2 bg-gradient-to-r from-cyan-400 to-emerald-400 bg-clip-text text-transparent">
            Gerenciador de Funções
        </h1>
        <p class="text-center text-gray-400 mb-12">Controle total sobre quem acessa o quê.</p>
        
        <RolesManager client:only="react" />
    </div>
  </main>
</Layout>

<style>
  /* Custom global styles for this page specifically if needed */
  .glass-panel {
    background: rgba(10, 14, 23, 0.7);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
  }
</style>
