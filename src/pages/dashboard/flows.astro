---
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import OmniChatApp from '../../components/OmniChatApp.jsx';
---

    <div style="display:flex; flex-direction:column; gap:2.5rem;">
        
        <div class="glass-panel" style="padding:2.5rem; background:linear-gradient(135deg, rgba(0, 212, 255, 0.1), rgba(0, 0, 0, 0.3)); border-color: rgba(0, 212, 255, 0.2); display:flex; justify-content:space-between; align-items:center;">
            <div>
                <h2 style="font-size:2.5rem; font-weight:900; color:white; margin:0;" class="text-gradient">Flow Intelligence üß†</h2>
                <p style="color:#94a3b8; margin:0.5rem 0 0; font-size:1.1rem;">An√°lise de performance e convers√£o dos fluxos automatizados.</p>
            </div>
            <div style="display:flex; gap:1.2rem;">
                <div class="stat-pill">
                    <span class="label">Taxa de Conclus√£o</span>
                    <span class="value" style="color:var(--neon-green);">88.4%</span>
                </div>
                <div class="stat-pill">
                    <span class="label">Drop-off M√©dio</span>
                    <span class="value" style="color:#ef4444;">12.6%</span>
                </div>
            </div>
        </div>

        <!-- Matrix Cards -->
        <div style="display:grid; grid-template-columns: repeat(3, 1fr); gap:1.5rem;">
            <div class="glass-panel" style="padding:1.5rem;">
                <div style="font-size:0.7rem; font-weight:900; color:#64748b; text-transform:uppercase; letter-spacing:1px; margin-bottom:1rem;">N√≥ Mais Acessado</div>
                <div style="display:flex; align-items:center; gap:10px;">
                    <div style="width:10px; height:10px; background:var(--neon-blue); border-radius:3px;"></div>
                    <span style="font-weight:800; color:white;">Welcome_Menu</span>
                </div>
            </div>
            <div class="glass-panel" style="padding:1.5rem;">
                <div style="font-size:0.7rem; font-weight:900; color:#64748b; text-transform:uppercase; letter-spacing:1px; margin-bottom:1rem;">Tempo M√©dio p/ Convers√£o</div>
                <div style="font-weight:800; color:white;">04m 32s</div>
            </div>
            <div class="glass-panel" style="padding:1.5rem;">
                <div style="font-size:0.7rem; font-weight:900; color:#64748b; text-transform:uppercase; letter-spacing:1px; margin-bottom:1rem;">IA Fallbacks (24h)</div>
                <div style="font-weight:800; color:var(--neon-green);">0 (Opera√ß√£o Nominal)</div>
            </div>
        </div>

        <div style="margin-top:2rem;">
            <div style="font-size:0.8rem; font-weight:900; color:#64748b; text-transform:uppercase; letter-spacing:1px; margin-bottom:1.5rem; display:flex; align-items:center; gap:10px;">
                <span>Desenvolvedor de Fluxos</span>
                <div style="height:1px; flex:1; background:rgba(255,255,255,0.05);"></div>
            </div>
            <OmniChatApp client:only="react" initialTab="flows" />
        </div>

    </div>

    <style>
        .stat-pill { background: rgba(0,0,0,0.3); padding: 0.8rem 1.5rem; border-radius: 12px; border: 1px solid rgba(255,255,255,0.05); display: flex; flex-direction: column; gap: 4px; }
        .stat-pill .label { font-size: 0.6rem; font-weight: 800; color: #64748b; text-transform: uppercase; }
        .stat-pill .value { font-size: 1.1rem; font-weight: 900; color: white; }
    </style>
