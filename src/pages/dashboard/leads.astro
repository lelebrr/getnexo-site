    <style>
        .crm-row { border-bottom: 1px solid rgba(255,255,255,0.03); transition: 0.3s; }
        .crm-row:hover { background: rgba(255,255,255,0.02); }
        .avatar { width: 40px; height: 40px; background: var(--neon-blue); border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: 900; color: black; font-size: 0.8rem; }
        .tag-status { padding: 4px 10px; border-radius: 6px; font-size: 0.65rem; font-weight: 800; }
        .btn-action-crm { background: rgba(0,0,0,0.3); border: 1px solid rgba(255,255,255,0.1); color: white; padding: 10px 18px; border-radius: 10px; font-weight: 700; cursor: pointer; font-size: 0.75rem; }
        .btn-action-crm.primary { background: var(--neon-green); color: black; border: none; }
        .search-bar { padding: 1rem; display: flex; align-items: center; gap: 1rem; }
        .search-bar input { background: none; border: none; color: white; width: 100%; outline: none; font-weight: 600; }
        .mini-tag { background: rgba(255,255,255,0.05); color: #64748b; padding: 4px 10px; border-radius: 50px; font-size: 0.7rem; font-weight: 800; white-space: nowrap; cursor: pointer; }
        .mini-tag:hover { color: white; background: rgba(255,255,255,0.1); }
    </style>
</DashboardLayout>
