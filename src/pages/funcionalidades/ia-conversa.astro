---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="IA que Conversa como Humano | JetNexo">
    <!-- 6. FAQ Schema -->
    <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "A IA precisa de treinamento?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Não. JetNexo aprende sozinha com o histórico dos clientes."
          }
        }
      ]
    }
    </script>
    <main class="pt-24 p-6 min-h-screen">
        <h1 class="text-4xl font-bold text-center mb-6">Atendimento Humanizado</h1>
        <p class="text-center text-gray-400">Nossa IA entende emoção, gírias e contexto.</p>
    </main>
</Layout>
