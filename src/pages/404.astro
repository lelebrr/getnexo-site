      konamiIndex++;
      if (konamiIndex === konamiCode.length) {
        document.body.style.transition = 'all 1s';
        document.body.style.filter = 'hue-rotate(180deg)';
        setTimeout(() => {
          alert('ğŸ® Matrix Mode Activated! You found the secret.');
        }, 500);
        konamiIndex = 0;
      }
    } else {
      konamiIndex = 0;
    }
  });
</script>
