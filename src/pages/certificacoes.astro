<script is:inline>
  document.querySelectorAll('[role="article"]').forEach(el => {
    el.addEventListener('focus', () => {
      // Anuncia nome do badge pra leitor de tela
      const name = el.querySelector('h3').textContent;
      const live = document.createElement('div');
      live.setAttribute('aria-live', 'polite');
      live.setAttribute('class', 'sr-only');
      live.textContent = `Badge: ${name}`;
      el.appendChild(live);
      // Remove depois de falar pra nao poluir DOM
      setTimeout(() => live.remove(), 1000);
    });
    
    // Suporte a teclado para tooltip
    el.setAttribute('tabindex', '0');
  });
</script>
