<script is:inline>
    // Simple Client-Side "Auth" (Mock)
    const modal = document.getElementById('auth-modal');
    const dashboard = document.getElementById('dashboard');
    const keyInput = document.getElementById('key-input');
    const unlockBtn = document.getElementById('unlock-btn');

    // Check cookie
    const getCookie = (name) => {
        const value = `; ${document.cookie}`;
        const parts = value.split(`; ${name}=`);
        if (parts.length === 2) return parts.pop().split(';').shift();
    }

    if (getCookie('ara_key') !== 'sua-chave-secreta') {
        modal.classList.remove('hidden');
        dashboard.classList.add('locked');
    }

    unlockBtn.onclick = () => {
        if (keyInput.value === 'sua-chave-secreta') { // In real world, verify with server
            document.cookie = "ara_key=sua-chave-secreta; path=/; max-age=31536000";
            modal.classList.add('hidden');
            dashboard.classList.remove('locked');
        } else {
            alert('Chave incorreta. A Ara n√£o te reconhece.');
        }
    }

    // Generator Logic
    const btn = document.getElementById('gerar-agora');
    const loading = document.getElementById('loading-bar');
    const status = document.getElementById('status-msg');

    btn.onclick = async () => {
        if (!confirm('Tem certeza? Isso vai consumir tokens da Ara e publicar no blog.')) return;

        btn.disabled = true;
        btn.classList.add('opacity-50', 'cursor-not-allowed');
        loading.classList.remove('hidden');
        status.classList.remove('hidden');

        try {
            const res = await fetch('/api/gerar-artigo', { method: 'POST' });
            const data = await res.json();
            
            if (data.success) {
                alert(`Sucesso! Artigo gerado: ${data.title}\n salvo em /blog/${data.slug}`);
                window.location.reload();
            } else {
                alert('Erro ao gerar artigo: ' + (data.error || 'Erro desconhecido'));
            }
        } catch (e) {
            alert('Erro de conex√£o com a Ara.');
            console.error(e);
        } finally {
            btn.disabled = false;
            btn.classList.remove('opacity-50', 'cursor-not-allowed');
            loading.classList.add('hidden');
            status.classList.add('hidden');
        }
    }
</script>

