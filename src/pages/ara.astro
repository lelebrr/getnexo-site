---
import AdminLayout from '../layouts/AdminLayout.astro';
---

<AdminLayout title="Ara AI Control">
  <div class="ara-interface">
    <div class="chat-panel">
        <div class="agent-avatar">
            <div class="ring"></div>
            <span class="icon">✨</span>
        </div>
        <h2>Ara, sua editora chefe.</h2>
        <p class="subtitle">O que vamos criar hoje?</p>

        <div class="prompt-box">
            <textarea placeholder="Ex: Escreva um artigo sobre como Chatbot aumenta vendas em 30%..."></textarea>
            <div class="actions">
                <button class="mode-btn selected">Artigo Blog</button>
                <button class="mode-btn">Post LinkedIn</button>
                <button class="mode-btn">E-mail Mkt</button>
                <button class="start-btn">
                    GERAR AGORA <span class="arrow">→</span>
                </button>
            </div>
        </div>
    </div>

    <div class="history-panel">
        <h3>Histórico Recente</h3>
        <div class="history-list">
            <div class="history-item">
                <span class="type">Blog</span>
                <span class="title">Por que seu e-commerce perde vendas?</span>
                <span class="date">Hoje, 10:23</span>
                <span class="status draft">Rascunho</span>
            </div>
            <div class="history-item">
                <span class="type">Social</span>
                <span class="title">Lançamento Black Friday</span>
                <span class="date">Ontem, 16:40</span>
                <span class="status published">Publicado</span>
            </div>
             <div class="history-item">
                <span class="type">Email</span>
                <span class="title">Recuperação de Carrinho #1</span>
                <span class="date">15/01, 09:12</span>
                <span class="status published">Enviado</span>
            </div>
        </div>
    </div>
  </div>
</AdminLayout>

<style>
    .ara-interface {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 2rem;
        height: 100%;
    }

    .chat-panel {
        background: #0f0f0f;
        border: 1px solid #222;
        border-radius: 12px;
        padding: 3rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .chat-panel::before {
        content: '';
        position: absolute;
        top: 0; left: 0; right: 0; height: 2px;
        background: linear-gradient(90deg, transparent, #00F7FF, transparent);
        animation: scan 3s infinite linear;
    }

    @keyframes scan {
        0% { transform: translateX(-100%); }
        100% { transform: translateX(100%); }
    }

    .agent-avatar {
        width: 80px;
        height: 80px;
        position: relative;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .icon { font-size: 2rem; }

    .ring {
        position: absolute;
        inset: 0;
        border: 2px solid #00F7FF;
        border-radius: 50%;
        animation: spin 10s linear infinite;
        border-top-color: transparent;
        box-shadow: 0 0 15px rgba(0, 247, 255, 0.2);
    }

    @keyframes spin { 100% { transform: rotate(360deg); } }

    h2 { font-size: 1.8rem; margin-bottom: 0.5rem; }
    .subtitle { color: #666; margin-bottom: 2rem; }

    .prompt-box {
        width: 100%;
        max-width: 600px;
        background: #1a1a1a;
        padding: 1rem;
        border-radius: 8px;
        border: 1px solid #333;
        transition: 0.3s;
    }

    .prompt-box:focus-within {
        border-color: #00F7FF;
        box-shadow: 0 0 20px rgba(0, 247, 255, 0.1);
    }

    textarea {
        width: 100%;
        height: 100px;
        background: transparent;
        border: none;
        color: white;
        font-family: 'Inter', sans-serif;
        font-size: 1rem;
        resize: none;
        outline: none;
    }

    .actions {
        display: flex;
        gap: 0.5rem;
        margin-top: 1rem;
        border-top: 1px solid #333;
        padding-top: 1rem;
        align-items: center;
    }

    .mode-btn {
        background: transparent;
        border: 1px solid #333;
        color: #888;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        cursor: pointer;
        font-size: 0.8rem;
        transition: 0.2s;
    }

    .mode-btn:hover { background: #222; color: white; }
    .mode-btn.selected {
        background: rgba(0, 247, 255, 0.1);
        border-color: #00F7FF;
        color: #00F7FF;
    }

    .start-btn {
        margin-left: auto;
        background: #00F7FF;
        color: black;
        border: none;
        padding: 0.6rem 1.5rem;
        border-radius: 4px;
        font-weight: bold;
        cursor: pointer;
        font-family: 'JetBrains Mono', monospace;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: 0.2s;
    }

    .start-btn:hover {
        background: white;
        transform: translateX(2px);
    }

    /* History */
    .history-panel {
        background: #0f0f0f;
        border-left: 1px solid #222;
        padding: 1.5rem;
    }

    .history-item {
        background: #161616;
        padding: 1rem;
        border-radius: 6px;
        margin-bottom: 0.8rem;
        border: 1px solid #222;
        display: flex;
        flex-direction: column;
        gap: 0.3rem;
    }

    .type {
        font-size: 0.7rem;
        text-transform: uppercase;
        color: #555;
        font-weight: bold;
    }

    .title { font-weight: 600; font-size: 0.95rem; }
    
    .date { font-size: 0.8rem; color: #666; }

    .status {
        font-size: 0.7rem;
        align-self: flex-start;
        padding: 0.2rem 0.6rem;
        border-radius: 10px;
        margin-top: 0.3rem;
    }

    .status.published {
        background: rgba(0, 255, 0, 0.1);
        color: #0f0;
    }

    .status.draft {
        background: rgba(255, 200, 0, 0.1);
        color: #FFD500;
    }
</style>
