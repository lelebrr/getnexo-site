<style>
  .container { max-width: 1300px; margin: 6rem auto; padding: 0 5%; }
  
  h1 { 
    font-size: clamp(2.5rem, 5vw, 3.5rem); 
    background: linear-gradient(90deg, var(--primary), var(--success)); 
    -webkit-background-clip: text; 
    background-clip: text;
    color: transparent; 
    text-align: center;
    margin: 0 0 1rem;
  }
  
  .intro {
    text-align: center;
    color: var(--text);
    font-size: 1.2rem;
    max-width: 800px;
    margin: 0 auto 3rem;
  }
  
  .comparison-table { 
    width: 100%; 
    border-collapse: collapse; 
    background: rgba(30,41,59,0.6); 
    backdrop-filter: blur(10px); 
    border-radius: 16px; 
    overflow: hidden;
    margin-bottom: 3rem;
  }
  
  th, td { 
    padding: 1.2rem 1rem; 
    border-bottom: 1px solid rgba(0,212,255,0.1); 
    text-align: left; 
  }
  
  th { 
    background: rgba(0,212,255,0.1); 
    color: var(--primary); 
    font-weight: 800;
    font-size: 0.95rem;
  }
  
  th.highlight {
    background: linear-gradient(135deg, rgba(0,255,157,0.2), rgba(0,212,255,0.2));
    color: var(--success);
  }
  
  td { color: var(--text); }
  
  td.highlight { 
    background: rgba(0,255,157,0.05);
    color: var(--light);
  }
  
  td.highlight strong { 
    color: var(--success);
    font-size: 1.05rem;
  }
  
  .verdict {
    background: rgba(0,255,157,0.1);
    border: 1px solid var(--success);
    border-radius: 16px;
    padding: 2rem;
    margin-bottom: 3rem;
  }
  
  .verdict h2 {
    color: var(--success);
    margin: 0 0 1rem;
    font-size: 1.8rem;
  }
  
  .verdict p {
    color: var(--light);
    font-size: 1.2rem;
    line-height: 1.7;
    margin: 0;
  }
  
  .verdict strong { color: var(--success); }
  
  .cta-box {
    text-align: center;
    background: rgba(30,41,59,0.8);
    border-radius: 16px;
    padding: 3rem;
  }
  
  .cta-box h3 {
    color: var(--light);
    font-size: 1.5rem;
    margin: 0 0 1rem;
  }
  
  .cta-box p {
    color: var(--text);
    margin: 0 0 2rem;
  }

  @media (max-width: 900px) {
    .comparison-table { font-size: 0.8rem; }
    th, td { padding: 0.8rem 0.5rem; }
  }
  
  @media (max-width: 600px) {
    .comparison-table { display: block; overflow-x: auto; }
  }
</style>
