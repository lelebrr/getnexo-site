  .btn-outline:hover { background: rgba(255,255,255,0.08); border-color: #00d4ff; }

  .hero-trust { display: flex; gap: 2rem; color: #64748b; font-size: 0.9rem; font-weight: 700; }

  /* 3D Ara Hologram */
  .hologram-container { position: relative; width: 500px; height: 600px; display: flex; align-items: center; justify-content: center; perspective: 1000px; margin: 0 auto; }
  .hologram-core { position: relative; width: 250px; height: 250px; transform-style: preserve-3d; transition: transform 0.1s ease-out; }
  
  .hologram-ring { position: absolute; inset: -20px; border: 2px solid #00d4ff; border-radius: 50%; opacity: 0.3; }
  .ring-1 { transform: rotateX(70deg); animation: ringRotate 4s linear infinite; }
  .ring-2 { transform: rotateX(70deg) rotateY(45deg); animation: ringRotate 6s linear reverse infinite; border-color: #00ff9d; }
  .ring-3 { transform: rotateX(70deg) rotateY(-45deg); animation: ringRotate 8s linear infinite; }
  @keyframes ringRotate { from { transform: rotateX(70deg) rotateZ(0deg); } to { transform: rotateX(70deg) rotateZ(360deg); } }

  .ara-avatar { font-size: 6rem; display: flex; align-items: center; justify-content: center; height: 100%; filter: drop-shadow(0 0 20px #00d4ff); animation: floatAra 3s ease-in-out infinite alternate; }
  @keyframes floatAra { from { transform: translateY(-10px); } to { transform: translateY(10px); } }

  .hologram-shards span { position: absolute; width: 4px; height: 4px; background: #00ff9d; border-radius: 50%; box-shadow: 0 0 10px #00ff9d; animation: shardMove 2s infinite linear; }
  .hologram-shards span:nth-child(1) { top: -20%; left: 10%; animation-delay: 0.5s; }
  .hologram-shards span:nth-child(2) { bottom: -10%; right: 20%; animation-delay: 1.2s; }
  @keyframes shardMove { 0% { opacity: 0; transform: translateY(0); } 50% { opacity: 1; } 100% { opacity: 0; transform: translateY(-40px); } }

