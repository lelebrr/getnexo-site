  @keyframes pulseBase { from { transform: scale(0.8); opacity: 0.3; } to { transform: scale(1.2); opacity: 0.6; } }

  .hologram-glow { position: absolute; top: 0; width: 350px; height: 350px; background: radial-gradient(circle, rgba(0, 212, 255, 0.15) 0%, transparent 70%); border-radius: 50%; z-index: -1; }

  /* Floating Mini Chat */
  .floating-chat { position: absolute; width: 240px; bottom: 30px; right: -50px; padding: 1rem; border-color: rgba(0, 255, 157, 0.2); animation: floatChat 6s ease-in-out infinite alternate; }
