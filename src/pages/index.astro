  /* Final CTA */
  .final-cta { padding: 8rem 5% 12rem; max-width: 1200px; margin: 0 auto; }
  .cta-box { padding: 6rem; text-align: center; border-radius: 48px; position: relative; overflow: hidden; }
  .cta-box h2 { font-size: 3.5rem; margin-bottom: 1.5rem; font-weight: 900; }
  .cta-box p { color: #94a3b8; font-size: 1.25rem; margin-bottom: 3.5rem; }
  .cta-actions { display: flex; justify-content: center; gap: 2rem; }

  /* Reveal Implementation */
  .reveal { opacity: 0; transform: translateY(30px); transition: 0.8s cubic-bezier(0.2, 0.8, 0.2, 1); }
  .reveal.active { opacity: 1; transform: translateY(0); }

  /* Segments Section */
  .segments-section { padding: 4rem 5% 0; }
  .segment-card { display: flex; flex-direction: column; align-items: center; justify-content: center; padding: 2rem; text-decoration: none; transition: 0.3s; border: 1px solid rgba(255,255,255,0.05); }
  .segment-card:hover { border-color: #00ff9d; background: rgba(255,255,255,0.03); transform: translateY(-5px); }
  
  @media (max-width: 1000px) {
    .hero-split { grid-template-columns: 1fr; text-align: center; gap: 6rem; }
    .hero-subtitle, .hero-trust { margin-left: auto; margin-right: auto; }
    .hero-ctas, .hero-trust { justify-content: center; }
