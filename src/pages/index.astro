<style>
  .hero-big { text-align: center; padding: 120px 5% 80px; background: linear-gradient(135deg, var(--dark), #0a1125); position: relative; }
  .hero-big::before { content: ''; position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: radial-gradient(ellipse at center, rgba(0,212,255,0.15) 0%, transparent 70%); pointer-events: none; }
  .hero-big h1 { font-size: clamp(2.5rem, 6vw, 4rem); background: linear-gradient(90deg, var(--primary), var(--success)); -webkit-background-clip: text; background-clip: text; color: transparent; font-weight: 800; line-height: 1.2; margin: 0; }
  .hero-big h1 strong { color: var(--success); -webkit-text-fill-color: var(--success); }
  .subtitle { font-size: clamp(1.1rem, 2.5vw, 1.6rem); max-width: 900px; margin: 2rem auto 0; color: var(--text); }
  .hero-buttons { display: flex; gap: 2rem; justify-content: center; margin: 3rem 0; flex-wrap: wrap; }
  .hero-badges { display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap; margin-top: 2rem; }
  .hero-badges span { padding: 0.6rem 1.4rem; border-radius: 50px; border: 1px solid rgba(0,212,255,0.3); font-size: 0.9rem; background: rgba(0,212,255,0.1); color: var(--light); }
  
  .btn-primary { display: inline-block; background: linear-gradient(90deg, var(--success), #00cc88); color: black; padding: 1rem 2.5rem; font-weight: 800; border-radius: 50px; text-decoration: none; transition: all 0.3s; box-shadow: 0 5px 20px rgba(0,255,157,0.3); }
  .btn-primary:hover { transform: translateY(-3px) scale(1.02); box-shadow: 0 10px 30px rgba(0,255,157,0.4); }
  .btn-secondary { display: inline-block; color: var(--light); border: 2px solid var(--primary); padding: 1rem 2.5rem; border-radius: 50px; font-weight: 800; text-decoration: none; transition: all 0.3s; }
  .btn-secondary:hover { background: var(--primary); color: black; }
  
  .resultados { background: rgba(30,41,59,0.8); padding: 80px 5%; }
  .resultados h2 { font-size: clamp(2rem, 4vw, 2.8rem); background: linear-gradient(90deg, var(--primary), var(--success)); -webkit-background-clip: text; background-clip: text; color: transparent; text-align: center; margin: 0 0 4rem; }
  .testimonios { display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem; max-width: 1200px; margin: 0 auto; }
  .testimonial { background: rgba(10,14,23,0.6); border-radius: 16px; padding: 2rem; border: 1px solid rgba(0,212,255,0.2); transition: all 0.3s; }
  .testimonial:hover { transform: translateY(-5px); border-color: var(--success); }
