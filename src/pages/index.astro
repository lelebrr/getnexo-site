<script is:inline>
    // Hero Chat Simulation
    const chatContainer = document.getElementById('hero-chat');
    const messages = [
        { type: 'user', text: 'Ol√°, gostaria de saber o pre√ßo do GetNexo Pro.' },
        { type: 'agent', text: 'Com certeza! O Plano Pro custa apenas R$ 97/m√™s com hospedagem inclusa.' },
        { type: 'agent', text: 'Gostaria de gerar um link de ativa√ß√£o agora?' },
        { type: 'user', text: 'Sim, por favor!' }
    ];

    let msgIndex = 0;
    function typeNext() {
        if (msgIndex < messages.length) {
            const msg = messages[msgIndex];
            const div = document.createElement('div');
            div.className = `chat-msg ${msg.type}`;
            div.innerHTML = `<div class="msg-inner">${msg.text}</div>`;
            chatContainer.appendChild(div);
            chatContainer.scrollTop = chatContainer.scrollHeight;
            msgIndex++;
            setTimeout(typeNext, 2500);
        } else {
            setTimeout(() => {
                chatContainer.innerHTML = '';
                msgIndex = 0;
                typeNext();
            }, 5000);
        }
    }
    typeNext();

    // Ara Avatar Parallax movement
    const hologram = document.querySelector('.hologram-core');
    window.addEventListener('mousemove', (e) => {
        if (!hologram) return;
        const x = (window.innerWidth / 2 - e.pageX) / 30;
        const y = (window.innerHeight / 2 - e.pageY) / 30;
        hologram.style.transform = `rotateY(${x}deg) rotateX(${-y}deg)`;
    });

    // Intersection Observer for Reveal Animations
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('active');
            }
        });
    }, { threshold: 0.1 });

    document.querySelectorAll('.reveal').forEach(el => observer.observe(el));
</script>
