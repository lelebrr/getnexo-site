<style>
  /* Hero */
  .hero {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    background: radial-gradient(circle at center, #111 0%, #000 70%);
    padding: 2rem;
  }

  h1 {
    font-size: 3.5rem;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    font-weight: 800;
  }

  .highlight {
    color: var(--neon-blue);
    text-shadow: 0 0 20px rgba(0, 247, 255, 0.3);
  }

  .subtitle {
    font-size: 1.25rem;
    color: #888;
    max-width: 800px;
    margin: 0 auto 2.5rem;
    font-weight: 300;
  }

  .text-white {
    color: white;
    font-weight: 500;
  }

  .microcopy {
    margin-top: 2rem;
    font-size: 0.9rem;
    color: #666;
    font-family: 'JetBrains Mono', monospace;
  }

  .buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    font-size: 1.1rem;
    padding: 1rem 2.5rem;
  }



  /* Section Generals */
  section {
    padding: 5rem 1rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .section-title {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: -1px;
  }

  .section-text {
    font-size: 1.2rem;
    color: #ccc;
    max-width: 700px;
    margin: 0 auto 3rem;
  }

  /* Stats */
  .stat-box {
    border: 1px solid #333;
    display: inline-block;
    padding: 2rem;
    border-radius: 8px;
    background: rgba(20, 0, 0, 0.5);
  }

  .stat-number {
    display: block;
    font-size: 4rem;
    font-weight: 800;
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  /* Features Grid */
  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    text-align: left;
  }

  .glass-card {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 2rem;
  }

  .glass-card h3 {
    margin-bottom: 1rem;
    font-size: 1.4rem;
  }

  .glass-card p {
    color: #aaa;
    line-height: 1.6;
  }

  /* Metrics */
  .metrics-grid {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    gap: 2rem;
    border-top: 1px solid #333;
    padding-top: 3rem;
  }

  .metric {
    display: flex;
    flex-direction: column;
  }

  .metric-value {
    font-size: 3rem;
    font-weight: 800;
    font-family: 'JetBrains Mono', monospace;
  }

  .metric-label {
    color: #666;
    text-transform: uppercase;
    font-size: 0.8rem;
    letter-spacing: 1px;
    margin-top: 0.5rem;
  }

  /* Text Colors */
  .text-red { color: var(--accent); }
  .text-gold { color: var(--gold); }
  .text-neon { color: var(--neon-blue); }
  .text-green { color: #00ff00; }

</style>
