  // Interface do usu√°rio para otimiza√ß√£o
  class OptimizerUI {
    constructor() {
      this.optimizer = null;
      this.init();
    }

    init() {
      // Mostrar otimizador apenas para admins (simula√ß√£o)
      if (localStorage.getItem('admin_token')) {
        document.getElementById('ai-content-optimizer').style.display = 'block';
        this.bindEvents();
      }
    }

    bindEvents() {
      document.getElementById('analyze-content')?.addEventListener('click', () => {
        this.runAnalysis();
      });

      document.getElementById('optimize-titles')?.addEventListener('click', () => {
        this.showTitleOptimizations();
      });

      document.getElementById('check-trends')?.addEventListener('click', () => {
        this.showTrendingTopics();
      });
    }

    async runAnalysis() {
      const content = document.body.innerText;
      const keywords = ['whatsapp', 'automa√ß√£o', 'ia', 'getnexo'];

      this.optimizer = new AIContentOptimizer(content, keywords);
      const analysis = await this.optimizer.analyzeContent();

      this.displayResults(analysis);
    }

    displayResults(analysis) {
      // Atualizar score
      document.getElementById('seo-score').textContent = analysis.seoScore;

      // Atualizar checks
      document.getElementById('length-check').textContent =
        analysis.seoScore >= 80 ? '‚úÖ Otimizado' : '‚ö†Ô∏è Precisa melhorar';

      document.getElementById('keyword-optimization').textContent =
        analysis.suggestions.some(s => s.type === 'keywords') ? '‚ö†Ô∏è Otimizar' : '‚úÖ Bom';

      document.getElementById('heading-structure').textContent =
        analysis.suggestions.some(s => s.type === 'structure') ? '‚ö†Ô∏è Melhorar' : '‚úÖ Estruturado';

      // Mostrar sugest√µes
      this.displaySuggestions(analysis.suggestions);

      // Mostrar concorrentes
      this.displayCompetitors(analysis.competitorInsights);

      // Mostrar trending
      this.displayTrending(analysis.trendingTopics);
    }

    displaySuggestions(suggestions) {
      const container = document.getElementById('ai-suggestions');
      container.innerHTML = suggestions.map(suggestion => `
        <div class="suggestion-item ${suggestion.priority}">
          <div class="suggestion-header">
            <span class="priority-${suggestion.priority}">${suggestion.priority.toUpperCase()}</span>
            <span class="suggestion-type">${suggestion.type}</span>
          </div>
          <p>${suggestion.suggestion}</p>
          <button class="apply-suggestion" data-action="${suggestion.action}">
            Aplicar Sugest√£o
          </button>
        </div>
      `).join('');
    }

    displayCompetitors(competitors) {
      const container = document.getElementById('competitor-data');
      container.innerHTML = competitors.map(comp => `
        <div class="competitor-card">
          <h5>${comp.competitor}</h5>
          <div class="competitor-metrics">
            <span>Posi√ß√£o: ${comp.position}</span>
            <span>Backlinks: ${comp.backlinks}</span>
            <span>Comprimento: ${comp.contentLength} palavras</span>
          </div>
          <div class="competitor-keywords">
            ${comp.keywords.map(kw => `<span class="keyword-tag">${kw}</span>`).join('')}
          </div>
        </div>
      `).join('');
    }

    displayTrending(trending) {
      const container = document.getElementById('trending-topics');
      container.innerHTML = trending.map(topic => `
        <div class="trending-item">
          <div class="trending-header">
            <h5>${topic.topic}</h5>
            <span class="growth ${topic.growth.startsWith('+') ? 'positive' : 'negative'}">
              ${topic.growth}
            </span>
          </div>
          <div class="trending-metrics">
            <span>Buscas: ${topic.searches}</span>
            <span class="opportunity ${topic.opportunity.toLowerCase()}">${topic.opportunity}</span>
          </div>
        </div>
      `).join('');
    }

    showTitleOptimizations() {
      if (this.optimizer) {
        this.optimizer.generateOptimizations().then(optimizations => {
          alert(`Sugest√µes de t√≠tulos:\n${optimizations.titleSuggestions.join('\n')}`);
        });
      }
    }

    showTrendingTopics() {
      if (this.optimizer) {
        this.optimizer.getTrendingTopics().then(trending => {
          const topics = trending.map(t => `${t.topic} (${t.growth})`).join('\n');
          alert(`Trending Topics:\n${topics}`);
        });
      }
    }
  }

  // Inicializar quando DOM estiver pronto
  document.addEventListener('DOMContentLoaded', () => {
    new OptimizerUI();
  });
</script>

